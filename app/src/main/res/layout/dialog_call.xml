<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="339dp"
    android:orientation="vertical"
    tools:context=".ui.main.sub.DialogCallFragment">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_only_top">

        <View
            android:layout_marginTop="10dp"
            android:layout_width="33dp"
            android:layout_height="7dp"
            android:background="@color/very_light_grey" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginTop="24dp"
            app:shapeAppearanceOverlay="@style/teamImageViewCalling"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/name"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="toto"
            tools:text="Maxime Paimpon" />

        <TextView
            android:id="@+id/description"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Pompier" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/call"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/call_button_2"
            android:paddingStart="40dp"
            android:paddingEnd="0dp"
            android:text="@string/contact"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:textColor="?colorPrimary"
            android:textSize="18sp" />

    </LinearLayout>



</FrameLayout>